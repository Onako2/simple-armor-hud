{
  "schemaVersion": 1,
  "id": "armorhud",
  "version": "${version}",

  "name": "Simple armor hud",
  "description": "A simple mod that adds your armor to the hud above the food bar",
  "authors": [
    "LegoRaft"
  ],
  "contact": {
    "homepage": "https://github.com/LegoRaft/simple-armor-hud",
    "sources": "https://github.com/LegoRaft/simple-armor-hud"
  },

  "license": "GPL-3.0",
  "icon": "assets/armorhud/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.legoraft.armorhud.armorHud"
    ]
  },
  "mixins": [
    "armorhud.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "minecraft": "1.19.x",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
